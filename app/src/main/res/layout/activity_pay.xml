<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PayActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <androidx.cardview.widget.CardView
        android:layout_below="@+id/toolbar"
        android:id="@+id/pay_cardview"
        app:cardElevation="8dp"
        android:layout_margin="20dp"
        android:background="#F4F4EB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="#000"
                android:textSize="20sp"
                android:paddingTop="10dp"
                android:paddingStart="20dp"
                android:text="Customer Data"
                android:background="#F8E5C9"
                android:id="@+id/pay_txt_address"
                android:layout_width="match_parent"
                android:layout_height="40dp"></TextView>
            <TextView
                android:layout_marginTop="20dp"
                android:textColor="#3E3C3C"
                android:textSize="18sp"
                android:paddingTop="10dp"
                android:paddingStart="20dp"
                android:text="Name"
                android:id="@+id/pay_txt_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"></TextView>
            <TextView
                android:textColor="#3E3C3C"
                android:textSize="18sp"
                android:paddingTop="10dp"
                android:paddingStart="20dp"
                android:text="Address"
                android:id="@+id/pay_txt_address3"
                android:layout_width="match_parent"
                android:layout_height="40dp"></TextView>
            <TextView
                android:textColor="#3E3C3C"
                android:textSize="18sp"
                android:paddingTop="10dp"
                android:paddingStart="20dp"
                android:text="Charging Way"
                android:id="@+id/pay_txt_charging_way"
                android:layout_width="match_parent"
                android:layout_height="40dp"></TextView>
            <TextView
                android:textColor="#3E3C3C"
                android:textSize="18sp"
                android:paddingTop="10dp"
                android:paddingStart="20dp"
                android:text="Order Name"
                android:id="@+id/pay_txt_order_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"></TextView>
            <TextView
                android:textColor="#3E3C3C"
                android:textSize="18sp"
                android:paddingTop="10dp"
                android:paddingStart="20dp"
                android:text="Order Count"
                android:id="@+id/pay_txt_order_count"
                android:layout_width="match_parent"
                android:layout_height="40dp"></TextView>
            <TextView
                android:textColor="#3E3C3C"
                android:textSize="18sp"
                android:paddingTop="10dp"
                android:paddingStart="20dp"
                android:text="Order Price"
                android:id="@+id/pay_txt_price"
                android:layout_width="match_parent"
                android:layout_height="40dp"></TextView>
            <TextView
                android:textStyle="bold"
                android:textColor="#FA0404"
                android:textSize="20sp"
                android:paddingTop="10dp"
                android:paddingStart="20dp"
                android:text="Total Price"
                android:id="@+id/pay_txt_total_price"
                android:layout_width="match_parent"
                android:layout_height="40dp"></TextView>




        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_below="@id/pay_cardview"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="50dp"
        android:layout_weight="0"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pay_btn_order_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/editbackground_orange"
            android:text="Order Now"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/pay_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/editbackground_orange"
            android:text="Cancel"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>