<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".DetailsCategoryActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/details_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ImageView
        android:id="@+id/details_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/background_home2" />

    <TextView
        android:id="@+id/details_catname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="2dp"
        android:layout_marginTop="20dp"
        android:gravity="start"
        android:padding="5dp"
        android:text="Name category"
        android:textColor="#1E1D1D"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/details_catprice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="2dp"
        android:gravity="start"
        android:padding="5dp"
        android:text="price category"
        android:textColor="#1E1D1D"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/details_catdescribtion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:gravity="start"
        android:padding="5dp"
        android:text="Describtion category"
        android:textColor="#1E1D1D"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/details_extra"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="2dp"
        android:layout_marginTop="20dp"
        android:gravity="start"
        android:hint="Extra"
        android:padding="5dp"
        android:textColor="#1E1D1D"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_decrease_tv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="-"
            android:textColor="#1E1D1D"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/item_count_et"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:hint="0" />

        <TextView
            android:id="@+id/item_increase_tv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="+"
            android:textColor="#1E1D1D"
            android:textSize="30dp" />
    </LinearLayout>

    <Button
        android:id="@+id/details_btn_add"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/editbackground_orange"
        android:gravity="center"
        android:text="Add to cart"
        android:textColor="#ffff"
        android:textFontWeight="2"
        android:textSize="25sp"
        android:textStyle="bold" />

</LinearLayout>