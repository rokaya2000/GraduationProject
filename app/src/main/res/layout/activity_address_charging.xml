<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddressChargingActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@drawable/background_home2" />

    <EditText
        android:id="@+id/address_edt_firstname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:textColor="#0C0C0C"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/address_edt_secondname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="4dp"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:textColor="#0C0C0C"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/address_edt_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="4dp"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName"
        android:textColor="#0C0C0C"
        android:textSize="20sp" />

    <Spinner
        android:entries="@array/Countries_array"
        android:id="@+id/address_spinner_country"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="4dp" />

    <Spinner
        android:entries="@array/Cities_array"
        android:id="@+id/address_spinner_city"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="4dp" />

    <Button
        android:layout_gravity="center"
        android:id="@+id/address_btn_next"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_margin="45dp"
        android:background="@drawable/editbackground_orange"
        android:text="Next"
        android:textColor="#FFFDFF"
        android:textSize="25sp"
        android:textStyle="bold" />
</LinearLayout>