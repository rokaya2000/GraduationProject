<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".UserActivity">

    <ImageView
        android:id="@+id/admin_imge"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@drawable/background_home2" />

    <EditText
        android:id="@+id/admin_edt_email"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:layout_weight="0"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:ems="10"
        android:gravity="center|center_horizontal"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textColor="#A19C9C" />

    <EditText
        android:id="@+id/admin_edt_password"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:layout_weight="0"
        android:drawableStart="@drawable/ic_baseline_edit_24"
        android:ems="10"
        android:gravity="center"
        android:hint="Password"
        android:inputType="textPersonName"
        android:textColor="#A19C9C" />

    <Button
        android:layout_gravity="center"
        android:id="@+id/admin_btn_login"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_margin="60dp"
        android:background="@drawable/editbackground_orange"
        android:text="Login"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

</LinearLayout>